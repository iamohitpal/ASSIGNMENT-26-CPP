#include<iostream>
using namespace std;
class counter
{
private:
    int count=0;
public:
    counter()
    {
        count++;
    }
    void inc_count()
    {
        count=count+1;
    }
    int get_count()
    {
        return count;
    }
};

int main ()
{
    counter c1,c2;
    cout<<"\nBefore calling Counter Function, Count = ";
    cout<<c1.get_count ();
    c1.inc_count ();
    cout<<"\n\nAfter calling Counter Function, Count = ";
    cout<<c1.get_count();
    cout<<endl;
return 0;
}
