#include<iostream>
using namespace std;
class date
{
private:
    int d,m,y;
public:
    date(int a,int b,int c)
    {
        d=a;
        m=b;
        y=c;
    }
    void showdate()
    {
        cout<<d<<":"<<m<<":"<<y<<"\n\n";
    }
};
int main()
{
    date d1(01,2,2020),d2(23,4,2022);
    d1.showdate();
    d2.showdate();
}
